# Discord Bot Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# PostgreSQL Database Configuration
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_NAME=data_disco
DB_HOST=localhost
DB_PORT=5432

# Alternative: Full database URL (optional, overrides individual params)
# DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password_here
ELASTICSEARCH_VERIFY_CERTS=False

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: GPT Model Selection
# GPT_MODEL=text-davinci-003

# Optional: Logging Configuration
# LOG_LEVEL=INFO
# LOG_FILE=bot.log

# Optional: Cache Configuration
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0
# CACHE_DEFAULT_TIMEOUT=300

# Optional: Rate Limiting
# DISCORD_API_RATE_LIMIT=15
# RATE_LIMIT_INTERVAL=15

# Optional: Security Settings
# REQUEST_SIGNING_SECRET=your_signing_secret_here
# ADMIN_USER_IDS=123456789,987654321

# Optional: Feature Toggles
# FEATURE_UNFURL_TWITTER_LINKS=True
# FEATURE_AUTO_RESPONDER=True
